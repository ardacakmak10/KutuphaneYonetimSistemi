<Page x:Class="KutuphaneYonetimSistemi.KitapYonetimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="KitapYonetimPage"
      Background="{DynamicResource AppBackground}">

    <Grid Margin="30">
        <Grid.Resources>
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6A11CB" Offset="0"/>
                            <GradientStop Color="#2575FC" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  TextBlock.FontWeight="SemiBold"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <TextBlock x:Name="Placeholder" 
                                               Text="{TemplateBinding Tag}"
                                               Foreground="{DynamicResource PlaceholderText}"
                                               Margin="10,0,10,0"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               Visibility="Collapsed"/>
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="10,0,10,0"
                                                  VerticalAlignment="Center"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  HorizontalScrollBarVisibility="Hidden"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Panel - Form Alanları -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackground}"
                CornerRadius="15"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}"
                Margin="0,0,15,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Kitap Bilgileri" 
                              FontSize="24" 
                              FontWeight="SemiBold" 
                              Foreground="{DynamicResource AppForeground}"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Kitap Adı:" 
                              Margin="0,0,0,5"
                              Foreground="{DynamicResource AppForeground}"/>
                    <TextBox x:Name="txtAd" 
                            Margin="0,0,0,15"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Tag="Kitap Adı"/>

                    <TextBlock Text="ISBN:" 
                              Margin="0,0,0,5"
                              Foreground="{DynamicResource AppForeground}"/>
                    <TextBox x:Name="txtISBN" 
                            Margin="0,0,0,15"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Tag="ISBN"/>

                    <TextBlock Text="Yazar:" 
                              Margin="0,0,0,5"
                              Foreground="{DynamicResource AppForeground}"/>
                    <TextBox x:Name="txtYazar" 
                            Margin="0,0,0,15"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Tag="Yazar"/>

                    <TextBlock Text="Yayın Yılı:" 
                              Margin="0,0,0,5"
                              Foreground="{DynamicResource AppForeground}"/>
                    <TextBox x:Name="txtYayinYili" 
                            Margin="0,0,0,25"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Tag="Yayın Yılı"/>

                    <WrapPanel>
                        <Button Content="Başa Ekle" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="85" 
                                Click="BtnBasaEkle_Click"/>

                        <Button Content="Araya Ekle" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="85" 
                                Click="BtnArayaEkle_Click"/>

                        <Button Content="Sona Ekle" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="85" 
                                Click="BtnSonaEkle_Click"/>

                        <Button Content="Sil" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="85" 
                                Click="BtnSil_Click"/>

                        <Button Content="Filtrele" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="85"
                                Click="BtnFiltrele_Click"/>
                    </WrapPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Sağ Panel - Kitap Listesi -->
        <Border Grid.Column="1"
                Background="{DynamicResource CardBackground}"
                CornerRadius="15"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Kitap Listesi" 
                          Grid.Row="0"
                          FontSize="24" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource AppForeground}"
                          Margin="20,20,20,15"/>

                <ListBox x:Name="lstKitaplar" 
                         Grid.Row="1"
                         Margin="15,0,15,15"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Foreground="{DynamicResource AppForeground}"
                         SelectionMode="Extended">
                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <ScrollViewer HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ItemBackground}" 
                                    CornerRadius="8" 
                                    Margin="0,5" 
                                    Padding="15">
                                <TextBlock Text="{Binding}" 
                                           Foreground="{DynamicResource AppForeground}"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>
