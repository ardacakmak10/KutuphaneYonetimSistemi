<Page x:Class="KutuphaneYonetimSistemi.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Hakkında"
      Background="{DynamicResource AppBackground}">

    <Grid Margin="40">
        <Border Background="{DynamicResource CardBackground}"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="600">

            <StackPanel>
                <TextBlock Text="📚 Kütüphane Yönetim Sistemi" 
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AppForeground}"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Bu proje, veri yapıları konularını uygulamalı olarak içeren bir dönem ödevidir. 
C# diliyle ve WPF teknolojisi kullanılarak geliştirilmiştir. Uygulama, bağlı liste, yığın, kuyruk ve ikili arama ağacı gibi temel veri yapılarını içerir ve bu yapılara uygun modüllerle yönetim işlevlerini yerine getirir."
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{DynamicResource AppForeground}"
                           Margin="0,0,0,20"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="🧑‍💻 Yapımcı: Arda Çakmak" FontSize="14" Margin="0,5" Foreground="{DynamicResource AppForeground}"/>
                    <TextBlock Text="📘 Ders: Algoritma Analizi ve Tasarımı" FontSize="14" Margin="0,5" Foreground="{DynamicResource AppForeground}"/>
                    <TextBlock Text="🛠️ Teknolojiler: C#, WPF, OOP" FontSize="14" Margin="0,5" Foreground="{DynamicResource AppForeground}"/>
                </StackPanel>

                <Separator Margin="0,10"/>

                <TextBlock Text="© 2025 Arda ÇAKMAK" 
                           FontSize="12"
                           Foreground="#888"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>