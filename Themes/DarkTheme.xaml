<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="CardColor">#2C2C2C</Color>

    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="AppForeground" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource CardColor}"/>
</ResourceDictionary>
