<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundColor">#F4F6F9</Color>
    <Color x:Key="TextColor">#333333</Color>
    <Color x:Key="CardColor">White</Color>

    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="AppForeground" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource CardColor}"/>
</ResourceDictionary>
